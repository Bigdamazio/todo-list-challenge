<%# app/views/lists/new.html.erb %>
<div class="container">
  <div class="form-page">
    <div class="form-header">
      <h1>Nova lista</h1>
      <p>Crie sua lista para começar</p>
    </div>

    <div class="form-container">
      <%= form_with(model: @list, class: "form") do |form| %>
        <%= render 'form', form: form %>
      <% end %>
    </div>

    <div class="form-footer">
      <%= link_to lists_path, class: "link" do %>
        ← Voltar para lista anterior
      <% end %>
    </div>
  </div>
</div>